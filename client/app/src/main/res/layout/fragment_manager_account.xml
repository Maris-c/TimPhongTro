<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý tài khoản"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/managerUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và tên"
        android:layout_margin="10dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green_500"
        android:textColorHint="@color/green_500"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/managerPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:layout_margin="10dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green_500"
        android:textColorHint="@color/green_500"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/managerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ của bạn"
        android:layout_margin="10dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green_500"
        android:textColorHint="@color/green_500"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/managerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:layout_margin="10dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green_500"
        android:textColorHint="@color/green_500"/>
    <TextView
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/search_border"
        android:backgroundTint="@color/green_500"
        android:text="Lưu"
        android:layout_margin="10dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="18sp"/>
</LinearLayout>